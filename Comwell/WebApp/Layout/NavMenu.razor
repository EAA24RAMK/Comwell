@using Core.Models
@using WebApp.Services
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inject NavigationManager NavManager
@inject IUserService UserService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <img src="images/comwell-logo.png" alt="Comwell logo" class="comwell-logo" />
        </a>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="HandleLinkClick">
                <span class="bi bi-house-door" aria-hidden="true"></span> Oversigt
            </NavLink>
        </div>

        @if (currentUser != null && currentUser.Role != "Elev" && currentUser.Role != "Kok")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="opret-plan" @onclick="HandleLinkClick">
                    <span class="bi bi-plus-circle" aria-hidden="true"></span> Opret plan
                </NavLink>
            </div>
        }

        @if (currentUser != null)
        {
            if (currentUser.Role == "Elev")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="elevplan" @onclick="HandleLinkClick">
                        <span class="bi bi-list-ul" aria-hidden="true"></span> Elevplan
                    </NavLink>
                </div>
            }
            else if (currentUser.Role == "HR" || currentUser.Role == "Køkkenchef" || currentUser.Role == "Kok")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="elevplaner" @onclick="HandleLinkClick">
                        <span class="bi bi-list-ul" aria-hidden="true"></span> Elevplaner
                    </NavLink>
                </div>
            }
        }

        @if (currentUser != null && currentUser.Role != "Elev")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users" @onclick="HandleLinkClick">
                    <span class="bi bi-people" aria-hidden="true"></span> Brugere
                </NavLink>
            </div>
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="learningmaterials" @onclick="HandleLinkClick">
                <span class="bi bi-journal-bookmark" aria-hidden="true"></span> Læringsmateriale
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="posts" @onclick="HandleLinkClick">
                <span class="bi bi-card-text" aria-hidden="true"></span> Opslagstavle
            </NavLink>
        </div>

        @if (currentUser != null && currentUser.Role != "Elev")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="rapporter" @onclick="HandleLinkClick">
                    <span class="bi bi-bar-chart" aria-hidden="true"></span> Rapporter
                </NavLink>
            </div>
        }

        <div class="nav-item px-3">
            @if (isLoggedIn)
            {
                <a class="nav-link" href="#" @onclick="HandleLogout">
                    <span class="bi bi-box-arrow-right"></span> Log ud
                </a>
            }
            else
            {
                <NavLink class="nav-link" href="/login" @onclick="HandleLinkClick">
                    <span class="bi bi-box-arrow-in-right"></span> Log ind
                </NavLink>
            }
        </div>
    </nav>
</div>

<div class="user-info mt-4 px-3">
    <div class="avatar">@GetInitials(currentUser?.Name)</div>
    <div class="user-details">
        <div class="user-name">@currentUser?.Name</div>
        <div class="user-role">@currentUser?.Role</div>
    </div>
</div>


@code {
    [Parameter] public EventCallback ToggleMenu { get; set; }

    private User? currentUser;
    private bool isLoggedIn = false;

    protected override async Task OnInitializedAsync()
    {
        var user = await LocalStorage.GetItemAsync<User>("loggedInUser");
        isLoggedIn = user != null;
        currentUser = await UserService.GetCurrentUserAsync();
    }

    private async Task HandleLogout()
    {
        await LocalStorage.RemoveItemAsync("loggedInUser");
        isLoggedIn = false;
        NavManager.NavigateTo("/login", true);
        await ToggleMenu.InvokeAsync(); // Luk menuen efter logout
    }

    private async Task HandleLinkClick()
    {
        await ToggleMenu.InvokeAsync(); // Luk menuen når et link klikkes
    }
    
    private string GetInitials(string? fullName)
    {
        if (string.IsNullOrWhiteSpace(fullName)) return "";
        var parts = fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1) return parts[0].Substring(0, 1).ToUpper();
        return string.Concat(parts[0][0], parts[^1][0]).ToUpper();
    }

}
