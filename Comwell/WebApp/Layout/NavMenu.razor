@using Core.Models
@using WebApp.Services
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inject NavigationManager NavManager
@inject IUserService UserService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Comwell</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door" aria-hidden="true"></span> Oversigt
            </NavLink>
        </div>
        @if (currentUser != null && currentUser.Role != "Elev")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="opret-plan">
                    <span class="bi bi-plus-circle" aria-hidden="true"></span> Opret plan
                </NavLink>
            </div>
        }
        @if (currentUser != null)
        {
            if (currentUser.Role == "Elev")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="elevplan">
                        <span class="bi bi-list-ul" aria-hidden="true"></span> Elevplan
                    </NavLink>
                </div>
            }
            else if (currentUser.Role == "HR" || currentUser.Role == "Køkkenchef")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="elevplaner">
                        <span class="bi bi-list-ul" aria-hidden="true"></span> Elevplaner
                    </NavLink>
                </div>
            }
        }
        @if (currentUser != null && currentUser.Role != "Elev")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users">
                    <span class="bi bi-people" aria-hidden="true"></span> Brugere
                </NavLink>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="learninggoals">
                <span class="bi bi-journal-bookmark" aria-hidden="true"></span> Læringsmål
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="posts">
                <span class="bi bi-card-text" aria-hidden="true"></span> Opslagstavle
            </NavLink>
        </div>
        @if (currentUser != null && currentUser.Role != "Elev")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="rapporter">
                    <span class="bi bi-bar-chart" aria-hidden="true"></span> Rapporter
                </NavLink>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="notifikationer">
                <span class="bi bi-bar-chart" aria-hidden="true"></span> Notifikationer
            </NavLink>
        </div>
        <div class="nav-item px-3">
            @if (isLoggedIn)
            {
                <a class="nav-link" href="#" @onclick="HandleLogout">
                    <span class="bi bi-box-arrow-right"></span> Log ud
                </a>
            }
            else
            {
                <NavLink class="nav-link" href="/login">
                    <span class="bi bi-box-arrow-in-right"></span> Log ind
                </NavLink>
            }
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private User? currentUser;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
    private bool isLoggedIn = false;

    protected override async Task OnInitializedAsync()
    {
        var user = await LocalStorage.GetItemAsync<User>("loggedInUser");
        isLoggedIn = user != null;

        currentUser = await UserService.GetCurrentUserAsync();
    }

    private async Task HandleLogout()
    {
        await LocalStorage.RemoveItemAsync("loggedInUser");
        isLoggedIn = false;
        NavManager.NavigateTo("/login", true);
    }
    
}
}