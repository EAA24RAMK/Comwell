@using Core.Models
@using WebApp.Services
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inject NavigationManager NavManager
@inject IUserService UserService

<!-- Topbar med logo -->
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <img src="images/comwell-logo.png" alt="Comwell logo" class="comwell-logo" />
        </a>
    </div>
</div>

<!-- Scrollbart navigationsmenu -->
<div class="nav-scrollable">
    <nav class="nav flex-column">
        <!-- Link til oversigt -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="HandleLinkClick">
                <span class="bi bi-house-door" aria-hidden="true"></span> Oversigt
            </NavLink>
        </div>

        <!-- Opret plan (vises ikke for Elev og Kok) -->
        @if (currentUser != null && currentUser.Role != "Elev" && currentUser.Role != "Kok")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="opret-plan" @onclick="HandleLinkClick">
                    <span class="bi bi-plus-circle" aria-hidden="true"></span> Opret plan
                </NavLink>
            </div>
        }

        <!-- Elevplan eller Elevplaner afhængig af rolle -->
        @if (currentUser != null)
        {
            if (currentUser.Role == "Elev")
            {
                <!-- Elev ser kun egne elevplaner -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="elevplan" @onclick="HandleLinkClick">
                        <span class="bi bi-list-ul" aria-hidden="true"></span> Elevplan
                    </NavLink>
                </div>
            }
            else if (currentUser.Role == "HR" || currentUser.Role == "Køkkenchef" || currentUser.Role == "Kok")
            {
                <!-- HR, Køkkenchef og Kok ser alle elevplaner -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="elevplaner" @onclick="HandleLinkClick">
                        <span class="bi bi-list-ul" aria-hidden="true"></span> Elevplaner
                    </NavLink>
                </div>
            }
        }

        <!-- Brugere (vises ikke for Elev) -->
        @if (currentUser != null && currentUser.Role != "Elev")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users" @onclick="HandleLinkClick">
                    <span class="bi bi-people" aria-hidden="true"></span> Brugere
                </NavLink>
            </div>
        }

        <!-- Læringsmateriale (tilgængelig for alle) -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="learningmaterials" @onclick="HandleLinkClick">
                <span class="bi bi-journal-bookmark" aria-hidden="true"></span> Læringsmateriale
            </NavLink>
        </div>

        <!-- Opslagstavle (tilgængelig for alle) -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="posts" @onclick="HandleLinkClick">
                <span class="bi bi-card-text" aria-hidden="true"></span> Opslagstavle
            </NavLink>
        </div>

        <!-- Rapporter (vises ikke for Elev) -->
        @if (currentUser != null && currentUser.Role != "Elev")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="rapporter" @onclick="HandleLinkClick">
                    <span class="bi bi-bar-chart" aria-hidden="true"></span> Rapporter
                </NavLink>
            </div>
        }

        <!-- Login eller logout afhængig af loginstatus -->
        <div class="nav-item px-3">
            @if (isLoggedIn)
            {
                <a class="nav-link" href="#" @onclick="HandleLogout">
                    <span class="bi bi-box-arrow-right"></span> Log ud
                </a>
            }
            else
            {
                <NavLink class="nav-link" href="/login" @onclick="HandleLinkClick">
                    <span class="bi bi-box-arrow-in-right"></span> Log ind
                </NavLink>
            }
        </div>
    </nav>
</div>

<!-- Brugerinformationskort nederst -->
<div class="user-info mt-4 px-3">
    <div class="avatar">@GetInitials(currentUser?.Name)</div>
    <div class="user-details">
        <div class="user-name">@currentUser?.Name</div>
        <div class="user-role">@currentUser?.Role</div>
    </div>
</div>


@code {
    [Parameter] public EventCallback ToggleMenu { get; set; } // Event der kan bruges til at lukke sidebaren

    private User? currentUser;              // Den aktuelt loggede bruger
    private bool isLoggedIn = false;        // Om der er en bruger logget ind

    // Initialiserer komponenten når den loades
    protected override async Task OnInitializedAsync()
    {
        var user = await LocalStorage.GetItemAsync<User>("loggedInUser"); // Hent brugerdata fra localStorage
        isLoggedIn = user != null;                                            // Sæt loginstatus
        currentUser = await UserService.GetCurrentUserAsync();                // Hent den aktive bruger
    }

    // Logger brugeren ud
    private async Task HandleLogout()
    {
        await LocalStorage.RemoveItemAsync("loggedInUser"); // Fjern brugeren fra localStorage
        isLoggedIn = false;                                     // Sæt loginstatus til false
        NavManager.NavigateTo("/login", true);      // Navigér til login-siden
        await ToggleMenu.InvokeAsync();                         // Luk menuen efter logout (mobilvenlig)
    }

    // Håndterer klik på menupunkter
    private async Task HandleLinkClick()
    {
        await ToggleMenu.InvokeAsync(); // Luk menuen når et link klikkes (mobilvenlig)
    }
    
    // Formål: Returnerer initialer ud fra brugerens fulde navn.
    // Funktion:
    // - Splitter navnet op ved mellemrum.
    // - Hvis der er flere navne, bruges første bogstav i begge navne.
    // - Hvis kun ét navn, bruges første bogstav.
    private static string GetInitials(string fullName)
    {
        if (string.IsNullOrWhiteSpace(fullName)) return "";
        
        var parts = fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        return parts.Length switch
        {
            0 => "",
            1 => parts[0][..1].ToUpper(),
            _ => $"{parts[0][..1]}{parts[^1][..1]}".ToUpper()
        };
    }
}
