@page "/"
@inject WebApp.Services.IUserService UserService
@inject WebApp.Services.IStudentPlanService StudentPlanService
@inject WebApp.Services.IPostService PostService
@using Core.Models

<h1 class="page-title">Oversigt</h1>

 @if (!isLoggedIn)
{
    <!-- Hvis ingen bruger er logget ind -->
    <p class="access-denied"><strong>Log venligst ind for at tilgå portalen.</strong></p>
}
else
{
    <!-- Hvis bruger er logget ind -->
    <p class="welcome-text">Velkommen tilbage, @(currentUser?.Name). Her er din samlede oversigt.</p>

    <div class="dashboard-wrapper">

        <!-- FLEX LAYOUT -->
        <div class="dashboard-columns">
            <!-- Venstre kolonne: Mål og links -->
            <div class="left-content">
                
                <!-- Oversigt over mål fordelt på status -->
                <div class="goal-grid">
                    <div class="goal-card total">
                        <div class="goal-icon icon-green">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div class="goal-content">
                            <span class="goal-label">Mål i alt</span>
                            <span class="goal-value">@goals.Count()</span> <!-- Total antal mål -->
                        </div>
                    </div>

                    <div class="goal-card completed">
                        <div class="goal-icon icon-beige">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="goal-content">
                            <span class="goal-label">Fuldført</span>
                            <span class="goal-value">@goals.Count(g => g.Status == "Fuldført")</span> <!-- Fuldførte mål -->
                        </div>
                    </div>

                    <div class="goal-card in-progress">
                        <div class="goal-icon icon-orange">
                            <i class="fas fa-spinner"></i>
                        </div>
                        <div class="goal-content">
                            <span class="goal-label">I gang</span>
                            <span class="goal-value">@goals.Count(g => g.Status == "I gang")</span> <!-- Mål i gang -->
                        </div>
                    </div>

                    <div class="goal-card attention">
                        <div class="goal-icon icon-dark">
                            <i class="fas fa-exclamation-circle"></i>
                        </div>
                        <div class="goal-content">
                            <span class="goal-label">Vær opmærksom på</span>
                            <span class="goal-value">@goals.Count(g => g.Status == "Vær opmærksom på")</span> <!-- Mål med opmærksomhed -->
                        </div>
                    </div>
                </div>

                <!-- Eksterne læringsportaler -->
                <div class="external-links-section">
                    <h2>
                        <i class="bi bi-box-arrow-up-right" style="margin-right: 0.5rem;"></i>
                        Andre læringsportaler
                    </h2>
                    <ul>
                        <li><i class="bi bi-journal-code"></i><a href="#">Læringsportal A</a></li>
                        <li><i class="bi bi-globe2"></i><a href="#">Læringsportal B</a></li>
                        <li><i class="bi bi-mortarboard"></i><a href="#">Læringsportal C</a></li>
                    </ul>
                </div>
            </div>

            <!-- Højre kolonne: Seneste opslag -->
            <div class="right-content">
                <div class="recent-posts-section">
                    <h2>
                        <i class="bi bi-chat-left-text" style="margin-right: 0.5rem;"></i>
                        Seneste opslag
                    </h2>

                    @if (recentPosts.Any())
                    {
                        <!-- Viser de seneste opslag -->
                        <ul>
                            @foreach (var post in recentPosts)
                            {
                                <li>
                                    <i class="bi bi-envelope-open" aria-hidden="true"></i>
                                    <div>
                                        <strong>@post.Title</strong><br />
                                        <span class="post-snippet">
                                            <!-- Viser et kort uddrag af opslagets indhold -->
                                            @post.Content?.Substring(0, Math.Min(80, post.Content.Length))...
                                        </span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <!-- Hvis ingen opslag findes -->
                        <p>Ingen beskeder fundet.</p>
                    }
                </div>
            </div>
        </div>

    </div>
}


@code {
    private User? currentUser;               // Den aktuelt loggede bruger
    private List<Goal> goals = new();         // Liste over alle mål tilhørende brugeren
    private bool isLoggedIn = false;          // Om brugeren er logget ind
    private List<Post> recentPosts = new();   // Liste over de seneste opslag

    // Initialiserer siden når den indlæses
    protected override async Task OnInitializedAsync()
    {
        currentUser = await UserService.GetCurrentUserAsync();
        await LoadGoals();
        await LoadRecentPosts();
    }

    // Henter alle mål for den aktuelle bruger
    private async Task LoadGoals()
    {
            if (currentUser != null)
            {
                isLoggedIn = true;
                var plans = await StudentPlanService.GetPlansByUserAsync(currentUser); // Hent elevens planer
                goals = plans.SelectMany(p => p.Goals).ToList(); // Saml alle mål fra alle planer
            }
    }

    // Henter de nyeste opslag fra PostService
    private async Task LoadRecentPosts()
    {
        var allPosts = await PostService.GetAllPostsAsync();
        recentPosts = allPosts
            .OrderByDescending(p => p.Id) // Sorterer så de nyeste opslag kommer først (baseret på ID)
            .Take(3) // Vis kun de 3 nyeste
            .ToList();
    }
}